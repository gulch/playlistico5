{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}

    {% include('_partials/nav.html.twig') %}

    <div class="container is-widescreen">

        <p>&nbsp;</p>

        <nav class="breadcrumb has-arrow-separator" aria-label="breadcrumbs">
            <ul>
                <li><a href="{{ path('route_dashboard') }}">Dashboard</a></li>
                <li><a href="{{ path('route_group_index') }}">Groups</a></li>
                <li class="is-active"><a aria-current="page">Show group «{{ group.title }}»</a></li>
            </ul>
        </nav>

        <h1 class="title is-1">
            Show group «{{ group.title }}»
        </h1>

        {% include '_partials/edit_link_button.html.twig' with {'route_path': 'route_group_edit', 'id': group.id} only %}
        {% include '_partials/delete_from_button.html.twig' with {'route_path': 'route_group_delete', 'id': group.id} only %}

        <p>&nbsp;</p>

        <table class="table is-fullwidth is-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ group.title }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

    </div>
{% endblock %}
