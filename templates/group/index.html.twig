{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    {% include('_partials/nav.html.twig') %}

    <div class="container is-widescreen">

        <p>&nbsp;</p>

        <h1 class="title is-1">
            Groups
        </h1>

        <a href="{{ path('route_group_new') }}" class="button">
            <span class="icon is-small">
              <i class="fas fa-plus"></i>
            </span>
            <span>Create new</span>
        </a>

        <p>&nbsp;</p>

        <table class="table is-fullwidth is-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Create Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    <td>{{ group.id }}</td>
                    <td>
                        <strong>
                            <a href="{{ path('route_group_show', {'id': group.id}) }}">
                                {{ group.title }}
                            </a>
                        </strong>
                    </td>
                    <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <div class="buttons has-addons">
                            <a href="{{ path('route_group_show', {'id': group.id}) }}"
                               class="button"
                               title="Show"
                            >
                                <span class="icon is-small">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </a>
                            <a href="{{ path('route_group_edit', {'id': group.id}) }}"
                               title="Edit"
                               class="button"
                            >
                                <span class="icon is-small">
                                    <i class="fas fa-marker"></i>
                                </span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
